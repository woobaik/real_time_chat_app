<h2 class="ui aligned center icon header">
  <i class="icon circular huge expand arrows alternate yellow custom-offwhite"></i>
  <span class="icon-text">OFF WHITE CHAT<span>
</h2>

<%= render 'layouts/notification' %>

<div class="container chat-layout">
  <div class="ui grid">
    <div class="twelve wide column">
      <div class="ui raised fluid card chatbox">
        <div class="content">
          <div class="ui feed">
            <%= render @messages %>
          </div>
        </div>
        <div class="extra content fluid">
          <%= form_for @message, html: {class: "ui reply form"}, url: message_path do |f| %>
            <div class="field">
              <div class="ui fluid icon input">
                <%= f.text_field :body%>
                <%= f.button ("<i class='bordered inverted orange edit icon'></i>").html_safe %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="four wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui inverted vertical menu">
            <a class="active item">
              Home
            </a>
            <a class="item">
              Messages
            </a>
            <a class="item">
              Friends
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
