<div class="ui container">
  <% if flash.any? %>
    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key)%>">
        <i class="close icon"></i>
        <%= value %>
        <% if @errors  %>
          <ul class="list">
            <% @errors.full_messages.each do |error| %>
              <li> <%= error %> </li>
          <% end %>
          <ul>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
